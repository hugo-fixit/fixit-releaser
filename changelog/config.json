{
  "output": "CHANGELOG.md",
  "sortCommits": "relevance",
  "commitLimit": false,
  "releaseSummary": true,
  "ignoreCommitPattern": "\\((i|ignore|release)\\)|ignore-for-release",
  "replaceText": {
    "([bB]reaking( [cC]hange)?|BREAKING CHANGE): ": "",
    "(^([a-zA-Z]+)(\\([^)]+\\))?!: )": "$3: ",
    "(^([fF]eat|:sparkles:|:tada:|✨|🎉)( [fF]eat)?: )": "",
    "(^((:sparkles:|:tada:|✨|🎉) )?[fF]eat\\()": "(",
    "(^([fF]ix|:bug:|🐛)( [fF]ix)?: )": "",
    "(^((:bug:|🐛) )?[fF]ix\\()": "(",
    "(^([cC]hore|:wrench:|:hammer:|🔧|🔨)( [cC]hore)?: )": "",
    "(^((:wrench:|:hammer:|🔧|🔨) )?[cC]hore\\()": "(",
    "(^([dD]ocs|:memo:|:book:|📝|📚)( [dD]ocs)?: )": "",
    "(^((:memo:|:book:|📝|📚) )?[dD]ocs\\()": "(",
    "(^([rR]efactor|:recycle:|♻️)( [rR]efactor)?: )": "",
    "(^((:recycle:|♻️) )?[rR]efactor\\()": "(",
    "(^([tT]est|:white_check_mark:|:test_tube:|✅|🧪)( [tT]est)?: )": "",
    "(^((:white_check_mark:|:test_tube:|✅|🧪) )?[tT]est\\()": "(",
    "(^([sS]tyle|:art:|🎨)( [sS]tyle)?: )": "",
    "(^((:art:|🎨) )?[sS]tyle\\()": "(",
    "(^([pP]erf|:zap:|:rocket:|⚡|🚀)( [pP]erf)?: )": "",
    "(^((:zap:|:rocket:|⚡|🚀) )?[pP]erf\\()": "(",
    "\\((?!i\\b|ignore\\b|release\\b)([^)]+)\\): ": "**$1**: ",
    "(^: )": ""
  }
}
